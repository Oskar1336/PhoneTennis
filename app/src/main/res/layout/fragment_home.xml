<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ptcorp.ptapplication.main.fragments.HomeFragment">

    <info.hoang8f.widget.FButton
        android:id="@+id/btnPlay"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bungee_shade"
        android:paddingBottom="15dp"
        android:paddingTop="10dp"
        android:text="@string/play"
        android:textColor="#fff"
        android:textSize="50sp"
        android:textStyle="bold"
        fbutton:cornerRadius="20dp"
        fbutton:fButtonColor="@color/fbutton_color_emerald"
        fbutton:layout_constraintEnd_toEndOf="parent"
        fbutton:layout_constraintLeft_toLeftOf="parent"
        fbutton:layout_constraintRight_toRightOf="parent"
        fbutton:layout_constraintStart_toStartOf="parent"
        fbutton:layout_constraintTop_toTopOf="parent"
        fbutton:shadowColor="@color/fbutton_color_nephritis"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="3dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/btnHowToPlay"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bungee_shade"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="How to play"
        android:textColor="#fff"
        android:textSize="24sp"

        android:textStyle="bold"
        fbutton:cornerRadius="20dp"
        fbutton:fButtonColor="@color/fbutton_default_color"
        fbutton:layout_constraintEnd_toEndOf="parent"
        fbutton:layout_constraintStart_toStartOf="parent"
        fbutton:layout_constraintTop_toBottomOf="@+id/btnPlay"
        fbutton:shadowColor="@color/fbutton_default_shadow_color"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="3dp" />


    <ImageView
        android:id="@+id/ivPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:src="@drawable/icons8_tennis_player_48"
        fbutton:layout_constraintBottom_toTopOf="@+id/ivWins"
        fbutton:layout_constraintStart_toStartOf="@+id/btnPlay"
        fbutton:layout_constraintTop_toTopOf="parent"
        fbutton:layout_constraintVertical_bias="0.981" />


    <TextView
        android:id="@+id/tvPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        android:textSize="30sp"
        fbutton:layout_constraintBottom_toBottomOf="@+id/ivPlayer"
        fbutton:layout_constraintStart_toEndOf="@+id/ivPlayer"
        fbutton:layout_constraintTop_toTopOf="@+id/ivPlayer" />


    <ImageView
        android:id="@+id/ivWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginBottom="8dp"
        android:layout_weight="3"
        android:src="@drawable/ic_win"
        fbutton:layout_constraintBottom_toTopOf="@+id/ivLoses"
        fbutton:layout_constraintStart_toStartOf="@+id/btnPlay" />

    <TextView
        android:id="@+id/tvMyWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        android:textSize="30sp"
        fbutton:layout_constraintBottom_toTopOf="@+id/ivLoses"
        fbutton:layout_constraintStart_toEndOf="@+id/ivWins"
        fbutton:layout_constraintTop_toTopOf="@+id/ivWins" />


    <ImageView
        android:id="@+id/ivLoses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginBottom="16dp"
        android:layout_weight="3"
        android:src="@drawable/ic_skull"
        fbutton:layout_constraintBottom_toTopOf="@+id/ivWinRate"
        fbutton:layout_constraintStart_toStartOf="@+id/btnPlay" />

    <TextView
        android:id="@+id/tvMyLosses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        android:textSize="30sp"
        fbutton:layout_constraintBottom_toBottomOf="@+id/ivLoses"
        fbutton:layout_constraintStart_toEndOf="@+id/ivLoses"
        fbutton:layout_constraintTop_toTopOf="@+id/ivLoses" />


    <ImageView
        android:id="@+id/ivWinRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_weight="3"
        android:src="@drawable/ic_winrate"
        fbutton:layout_constraintBottom_toBottomOf="parent"
        fbutton:layout_constraintStart_toStartOf="@+id/btnPlay"
        fbutton:layout_constraintTop_toTopOf="parent"
        fbutton:layout_constraintVertical_bias="0.965" />

    <TextView
        android:id="@+id/tvMyWinrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="3"
        android:textSize="30sp"
        fbutton:layout_constraintBottom_toBottomOf="@+id/ivWinRate"
        fbutton:layout_constraintStart_toEndOf="@+id/ivWinRate"
        fbutton:layout_constraintTop_toTopOf="@+id/ivWinRate" />




</android.support.constraint.ConstraintLayout>
