<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ptcorp.ptapplication.main.fragments.HomeFragment">

    <info.hoang8f.widget.FButton
        android:id="@+id/btnPlay"
        android:layout_width="232dp"
        android:layout_height="110dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bungee_shade"
        android:text="PLAY"
        android:textColor="#fff"
        android:textSize="50dp"
        android:textStyle="bold"
        fbutton:cornerRadius="20dp"
        fbutton:fButtonColor="@color/fbutton_color_emerald"
        fbutton:layout_constraintBottom_toBottomOf="parent"
        fbutton:layout_constraintEnd_toEndOf="parent"
        fbutton:layout_constraintStart_toStartOf="parent"
        fbutton:layout_constraintTop_toTopOf="parent"
        fbutton:layout_constraintVertical_bias="0.163"
        fbutton:shadowColor="@color/fbutton_color_nephritis"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="3dp" />


    <ImageView
        android:id="@+id/ivPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="3"
        android:src="@drawable/icons8_tennis_player_48"
        fbutton:layout_constraintBottom_toTopOf="@+id/ivWins"
        fbutton:layout_constraintTop_toBottomOf="@+id/btnPlay"
        tools:layout_editor_absoluteX="64dp" />

            <TextView
                android:id="@+id/tvPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="2"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textSize="30sp" />


    <ImageView
        android:id="@+id/ivWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="280dp"
        android:layout_weight="3"
        android:src="@drawable/ic_win"
        fbutton:layout_constraintBottom_toTopOf="@+id/ivLoses"
        fbutton:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="64dp" />

            <TextView
                android:id="@+id/tvMyWins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="2"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textSize="30sp" />


    <ImageView
        android:id="@+id/ivLoses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_weight="3"
        android:src="@drawable/ic_skull"
        fbutton:layout_constraintHorizontal_bias="0.205"
        fbutton:layout_constraintLeft_toLeftOf="parent"
        fbutton:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="351dp" />

            <TextView
                android:id="@+id/tvMyLosses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="2"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textSize="30sp" />


    <ImageView
        android:id="@+id/ivWinRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_weight="3"
        android:src="@drawable/ic_winrate"
        fbutton:layout_constraintBottom_toBottomOf="parent"
        fbutton:layout_constraintStart_toStartOf="@+id/btnPlay"
        fbutton:layout_constraintTop_toTopOf="parent"
        fbutton:layout_constraintVertical_bias="0.924" />

            <TextView
                android:id="@+id/tvMyWinrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="3"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textSize="30sp" />




</android.support.constraint.ConstraintLayout>
