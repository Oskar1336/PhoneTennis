<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ptcorp.ptapplication.main.fragments.HomeFragment">

    <info.hoang8f.widget.FButton
        android:id="@+id/btnPlay"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bungee_shade"
        android:paddingBottom="15dp"
        android:paddingTop="10dp"
        android:text="@string/play"
        android:textColor="#fff"
        android:textSize="50sp"
        android:textStyle="bold"
        fbutton:cornerRadius="20dp"
        fbutton:fButtonColor="@color/fbutton_color_emerald"
        fbutton:layout_constraintEnd_toEndOf="parent"
        fbutton:layout_constraintLeft_toLeftOf="parent"
        fbutton:layout_constraintRight_toRightOf="parent"
        fbutton:layout_constraintStart_toStartOf="parent"
        fbutton:layout_constraintTop_toTopOf="parent"
        fbutton:shadowColor="@color/fbutton_color_nephritis"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="3dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/btnHowToPlay"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bungee_shade"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/how_to_play"
        android:textColor="#fff"
        android:textSize="24sp"

        android:textStyle="bold"
        fbutton:cornerRadius="20dp"
        fbutton:fButtonColor="@color/fbutton_default_color"
        fbutton:layout_constraintEnd_toEndOf="parent"
        fbutton:layout_constraintStart_toStartOf="parent"
        fbutton:layout_constraintTop_toBottomOf="@+id/btnPlay"
        fbutton:shadowColor="@color/fbutton_default_shadow_color"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="3dp" />

    <!--<TableLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <!--<TableRow-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->

        <!--<TableRow-->
            <!--android:layout_width="match_parent"-->
