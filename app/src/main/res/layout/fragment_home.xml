<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ptcorp.ptapplication.HomeFragment">

    <!-- TODO: Update blank fragment layout -->


    <info.hoang8f.widget.FButton
        android:id="@+id/FButton"
        android:layout_width="232dp"
        android:layout_height="110dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bungee_shade"
        android:text="PLAY"
        android:textColor="#fff"
        android:textSize="50dp"
        android:textStyle="bold"
        fbutton:cornerRadius="20dp"
        fbutton:fButtonColor="@color/fbutton_color_emerald"
        fbutton:layout_constraintBottom_toBottomOf="parent"
        fbutton:layout_constraintEnd_toEndOf="parent"
        fbutton:layout_constraintStart_toStartOf="parent"
        fbutton:layout_constraintTop_toTopOf="parent"
        fbutton:layout_constraintVertical_bias="0.163"
        fbutton:shadowColor="@color/fbutton_color_nephritis"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="3dp" />

    <ImageView
        android:id="@+id/ivPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icons8_tennis_player_48"
        fbutton:layout_constraintBottom_toBottomOf="@+id/tvPlayerName"
        fbutton:layout_constraintEnd_toStartOf="@+id/tvPlayerName"
        fbutton:layout_constraintTop_toTopOf="@+id/tvPlayerName" />

    <TextView
        android:id="@+id/tvPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:text="TextView"
        android:textSize="30sp"
        fbutton:layout_constraintEnd_toEndOf="parent"
        fbutton:layout_constraintStart_toStartOf="parent"
        fbutton:layout_constraintTop_toBottomOf="@+id/FButton" />

    <ImageView
        android:id="@+id/ivWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_win"
        fbutton:layout_constraintBottom_toBottomOf="@+id/tvMyWins"
        fbutton:layout_constraintEnd_toStartOf="@+id/tvMyWins"
        fbutton:layout_constraintTop_toTopOf="@+id/tvMyWins" />

    <TextView
        android:id="@+id/tvMyWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textSize="30sp"
        fbutton:layout_constraintEnd_toEndOf="parent"
        fbutton:layout_constraintHorizontal_bias="0.502"
        fbutton:layout_constraintStart_toStartOf="parent"
        fbutton:layout_constraintTop_toBottomOf="@+id/tvPlayerName" />

    <ImageView
        android:id="@+id/ivLoses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_skull"
        fbutton:layout_constraintBottom_toBottomOf="@+id/tvMyLosses"
        fbutton:layout_constraintTop_toTopOf="@+id/tvMyLosses"
        tools:layout_editor_absoluteX="75dp" />

    <TextView
        android:id="@+id/tvMyLosses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textSize="30sp"
        fbutton:layout_constraintEnd_toEndOf="parent"
        fbutton:layout_constraintHorizontal_bias="0.502"
        fbutton:layout_constraintStart_toStartOf="parent"
        fbutton:layout_constraintTop_toBottomOf="@+id/tvMyWins" />

    <ImageView
        android:id="@+id/ivWinRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_winrate"
        fbutton:layout_constraintBottom_toBottomOf="@+id/tvMyWinrate"
        fbutton:layout_constraintTop_toTopOf="@+id/tvMyWinrate"
        tools:layout_editor_absoluteX="75dp" />

    <TextView
        android:id="@+id/tvMyWinrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textSize="30sp"
        fbutton:layout_constraintEnd_toEndOf="parent"
        fbutton:layout_constraintHorizontal_bias="0.502"
        fbutton:layout_constraintStart_toStartOf="parent"
        fbutton:layout_constraintTop_toBottomOf="@+id/tvMyLosses" />


</android.support.constraint.ConstraintLayout>
